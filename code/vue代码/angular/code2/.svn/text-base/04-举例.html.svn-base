<!DOCTYPE html>
<html ng-app="app">
	<head>
		<meta charset="UTF-8">
		<title></title>
	</head>
	<body ng-controller="myController">
		<p>
			商品价格：<input type="text" ng-model="price"/>
		</p>
		<p>
			商品数量：<input type="text" ng-model="count"/>
		</p>
		<p>
			运费：<span>{{fre|currency:'￥'}}</span>
		</p>
		<p>
			总价：<span>{{total()|currency:'￥'}}</span>
		</p>
		<script type="text/javascript" src="angular-1.4.8.js" ></script>
		<script>
			var app=angular.module('app',[]);
			app.controller('myController',['$scope',function($scope){
				$scope.price=0;
				$scope.count=0;
				$scope.fre=10;
				
				$scope.total=function(){
//					if(this.price*this.count>=500){
//						this.fre=0;
//					}else{
//						this.fre=10;
//					}
					return this.price*this.count+this.fre;
				}
				//观察this.price*this.count的变化
				$scope.$watch('this.price*this.count',function(newVal,oldVal){
					$scope.fre=	newVal>=500?0:10;
				});
			}]);
		</script>
	</body>
</html>
